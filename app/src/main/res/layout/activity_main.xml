<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/businessId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="businessId" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/buttonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="buttonId" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/widgetUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="widgetUrl" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="toolbar text" />

        <Button
            android:id="@+id/btnOpenSdkInputParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Open SDK with params" />

        <Button
            android:id="@+id/btnOpenSdkParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Fill test params" />

        <Button
            android:id="@+id/btnClearFcmToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="clear fcm token" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>